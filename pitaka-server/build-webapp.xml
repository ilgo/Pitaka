<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="make-webapp" name="copy servlet classes and resources to webapp dir">

	<property name="pitaka.dir" location="/home/ilgo/tmp/pitaka" />
	<property name="webapp.classes.dir" location="${pitaka.dir}/webapps/pitaka/WEB-INF/classes" />

	<target name="make-webapp">
		<copy todir="${pitaka.dir}/webapps">
			<fileset dir="webapps" />
		</copy>
		<copy todir="${webapp.classes.dir}">
			<fileset dir="bin" />
		</copy>
		<delete dir="${webapp.classes.dir}/zen/ilgo/pitaka/server" />
	</target>
</project>
