<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="install_Pitaka" name="create Databases and create the files and jars">

	<property name="install.dir" location="/home/ilgo/tmp/exist"/>
	
	<target name="install_Pitaka">
		<echo message="install Dir is set to = ${install.dir}" />

		<exec executable="rm">
			<arg value="-rf" />
			<arg value="$(install.dir)/*" />
		</exec>

		<mkdir dir="${install.dir}/xml" />
		<mkdir dir="${install.dir}/logs" />

		<copy file="resources/conf.xml" todir="${install.dir}" />
		<replace file="${install.dir}/conf.xml" token="$installDir$" value="${install.dir}" />

		<java classname="zen.ilgo.pitaka.install.InstallPitaka">
			<arg value="-Dexist.initdb=true" />
			<arg value="-Dexist.home=/home/ilgo/pitakaDB" />
			<classpath>
				<pathelement path="./bin" />
				<pathelement path="/usr/share/java/derby.jar" />
				<pathelement path="/usr/share/java/log4j.jar" />
				<pathelement path="/home/ilgo/Code/eXist/exist.jar" />
				<pathelement path="/home/ilgo/Code/eXist/lib/core/xmldb.jar" />
				<pathelement path="/home/ilgo/Code/eXist/lib/core/xmlrpc-client-3.1.2.jar" />
				<pathelement path="/home/ilgo/Code/eXist/lib/core/xmlrpc-common-3.1.2.jar" />
			</classpath>
		</java>

	</target>
</project>
