<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Dictionary Category"
            id="zen.ilgo.pitaka.dict">
      </category>
      <view
            name="Dictionary View"
            icon="icons/sample.gif"
            category="zen.ilgo.pitaka.dict"
            class="zen.ilgo.pitaka.dict.DictView"
            id="zen.ilgo.pitaka.dict.DictView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="zen.ilgo.pitaka.dict.DictView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
